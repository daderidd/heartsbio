---
interface Props {
  value: string;
  label: string;
  icon?: string;
}

const { value, label, icon } = Astro.props;
---

<div class="bg-white rounded-2xl overflow-hidden shadow-sm border-t-4 border-dark-green p-8 text-center hover:shadow-md transition-shadow">
  {icon && (
    <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-cream flex items-center justify-center">
      <svg class="w-8 h-8 text-dark-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
      </svg>
    </div>
  )}
  <div class="text-5xl md:text-6xl font-display font-bold mb-4 text-dark-green">
    {value}
  </div>
  <div class="text-base text-black/70 font-medium leading-snug">
    {label}
  </div>
</div>
