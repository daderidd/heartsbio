---
interface Props {
  value: string;
  label: string;
  icon?: string;
  featured?: boolean;
}

const { value, label, icon, featured = false } = Astro.props;
---

<div class={`
  kpi-card group relative overflow-hidden rounded-3xl transition-all duration-500 h-full flex flex-col
  ${featured
    ? 'bg-green p-10 md:p-12 shadow-xl hover:shadow-2xl'
    : 'bg-cream p-8 md:p-10 shadow-lg hover:shadow-xl border border-black/10'
  }
`}>
  <!-- Decorative background element -->
  <div class={`
    absolute top-0 right-0 w-32 h-32 rounded-full blur-3xl opacity-20 transition-all duration-700 group-hover:scale-150
    ${featured ? 'bg-cream' : 'bg-dark-green'}
  `}></div>

  <!-- Content wrapper with relative positioning -->
  <div class="relative z-10 flex flex-col h-full">
    {icon && (
      <div class={`
        inline-flex items-center justify-center w-14 h-14 md:w-16 md:h-16 mb-6 rounded-2xl transition-all duration-300 group-hover:scale-110 group-hover:rotate-3
        ${featured
          ? 'bg-white/20 backdrop-blur-sm'
          : 'bg-gradient-to-br from-dark-green/10 to-green/5'
        }
      `}>
        <svg class={`w-7 h-7 md:w-8 md:h-8 transition-colors duration-300 ${featured ? 'text-white' : 'text-dark-green'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
        </svg>
      </div>
    )}

    <div class={`
      text-3xl md:text-4xl lg:text-5xl font-display font-bold mb-5 transition-transform duration-300 group-hover:scale-105
      ${featured ? 'text-white' : 'text-dark-green'}
    `}>
      {value}
    </div>

    <div class={`
      text-base md:text-lg font-medium leading-relaxed mt-auto
      ${featured ? 'text-white/90' : 'text-black/70'}
    `}>
      {label}
    </div>
  </div>

  <!-- Accent bar -->
  <div class={`
    absolute bottom-0 left-0 h-1.5 transition-all duration-500 group-hover:h-2 w-0 group-hover:w-full
    ${featured
      ? 'bg-cream'
      : 'bg-green'
    }
  `}></div>
</div>

<style>
  .kpi-card {
    transform: translateZ(0);
    will-change: transform, box-shadow;
  }

  @media (prefers-reduced-motion: reduce) {
    .kpi-card,
    .kpi-card * {
      transition: none !important;
      animation: none !important;
    }
  }
</style>
