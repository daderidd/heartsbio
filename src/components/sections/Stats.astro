---
import KPICard from '../ui/KPICard.astro';

// Example KPIs - These should be replaced with actual HeartsBio metrics
const kpis = [
  {
    value: '10+',
    label: 'Active Research Projects',
    color: 'primary' as const,
    icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z'
  },
  {
    value: '50+',
    label: 'Publications',
    color: 'secondary' as const,
    icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253'
  },
  {
    value: '25+',
    label: 'Industry Partners',
    color: 'accent' as const,
    icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z'
  },
  {
    value: '5+',
    label: 'Years of Innovation',
    color: 'primary' as const,
    icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z'
  },
];
---

<section class="section bg-gradient-to-br from-gray-50 to-white">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-brand-primary mb-6">
        Impact by the Numbers
      </h2>
      <p class="text-xl text-gray-600">
        Our commitment to innovation and excellence drives measurable results
      </p>
    </div>

    <!-- KPIs Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      {kpis.map((kpi) => (
        <KPICard
          value={kpi.value}
          label={kpi.label}
          color={kpi.color}
          icon={kpi.icon}
        />
      ))}
    </div>
  </div>
</section>
