---
// Portfolio/R&D Section - Showcase research projects and case studies

// Sample projects - Will be replaced with actual content from Content Collections
const featuredProjects = [
  {
    title: 'Sustainable Bioprocessing',
    category: 'Research',
    description: 'Developing environmentally friendly bioprocessing methods that reduce waste and energy consumption.',
    image: '/images/project-1.jpg', // Placeholder
    tags: ['Sustainability', 'Innovation'],
  },
  {
    title: 'Advanced Diagnostics',
    category: 'Development',
    description: 'Creating next-generation diagnostic tools for faster and more accurate disease detection.',
    image: '/images/project-2.jpg', // Placeholder
    tags: ['Healthcare', 'Technology'],
  },
  {
    title: 'Biomanufacturing Optimization',
    category: 'Applied Research',
    description: 'Optimizing production processes to increase yield and reduce costs in biomanufacturing.',
    image: '/images/project-3.jpg', // Placeholder
    tags: ['Efficiency', 'Scale'],
  },
];
---

<section id="portfolio" class="section bg-white">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-block mb-4 px-4 py-2 bg-brand-secondary/10 rounded-full">
        <span class="text-brand-secondary font-semibold text-sm">Our Work</span>
      </div>
      <h2 class="text-brand-primary mb-6">
        R&D Portfolio
      </h2>
      <p class="text-xl text-gray-600">
        Explore our cutting-edge research projects and innovative solutions that are shaping the future of biotechnology.
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {featuredProjects.map((project) => (
        <article class="group bg-white rounded-2xl border border-gray-200 overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <!-- Project Image Placeholder -->
          <div class="relative aspect-video bg-gradient-to-br from-brand-primary/20 to-brand-secondary/20 overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-center text-brand-primary/50">
                <svg class="w-16 h-16 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <p class="text-sm font-medium">Project Image</p>
              </div>
            </div>
          </div>

          <!-- Project Content -->
          <div class="p-6">
            <div class="text-sm text-brand-secondary font-semibold mb-2">
              {project.category}
            </div>
            <h3 class="text-2xl font-display font-bold text-gray-900 mb-3 group-hover:text-brand-primary transition-colors">
              {project.title}
            </h3>
            <p class="text-gray-600 mb-4">
              {project.description}
            </p>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                  {tag}
                </span>
              ))}
            </div>

            <!-- Read More Link -->
            <a href="#" class="inline-flex items-center gap-2 text-brand-primary font-semibold hover:gap-3 transition-all">
              Learn More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>

    <!-- View All Projects CTA -->
    <div class="text-center">
      <a href="/portfolio" class="btn btn-outline text-lg px-8 py-4">
        View All Projects
      </a>
    </div>
  </div>
</section>
