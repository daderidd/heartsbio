---
// Contact Section - Get in touch form
---

<section id="contact" class="section bg-cream">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <!-- Left Column: Contact Info Card -->
      <div class="bg-white rounded-3xl p-10 lg:p-12 shadow-sm">
        <!-- Tag -->
        <div class="flex items-center gap-2 mb-6">
          <div class="w-8 h-1 bg-dark-green rounded-full"></div>
          <span class="text-dark-green font-semibold text-sm tracking-widest uppercase">Connect</span>
        </div>

        <!-- Heading -->
        <h2 class="text-4xl lg:text-5xl font-display font-bold text-black mb-4">
          Get in touch
        </h2>

        <p class="text-black/70 text-lg mb-10">
          We're here to assist you with any inquiries.
        </p>

        <!-- Contact Details -->
        <div class="space-y-6">
          <!-- Email -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-cream flex items-center justify-center flex-shrink-0" aria-hidden="true">
              <svg class="w-5 h-5 text-dark-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <a href="mailto:info@heartsbio.nl" class="text-black hover:text-green transition-colors text-lg" aria-label="Email info@heartsbio.nl">
              info@heartsbio.nl
            </a>
          </div>
        </div>
      </div>

      <!-- Right Column: Contact Form -->
      <div>
        <form class="space-y-6" method="POST" action="/api/contact" aria-label="Contact form">
          <!-- Name Row -->
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="first-name" class="block text-black/70 text-sm mb-2">First name</label>
              <input
                type="text"
                id="first-name"
                name="firstName"
                required
                aria-required="true"
                class="w-full px-4 py-3 bg-white border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-dark-green focus:border-transparent transition-all"
              />
            </div>
            <div>
              <label for="last-name" class="block text-black/70 text-sm mb-2">Last name</label>
              <input
                type="text"
                id="last-name"
                name="lastName"
                required
                aria-required="true"
                class="w-full px-4 py-3 bg-white border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-dark-green focus:border-transparent transition-all"
              />
            </div>
          </div>

          <!-- Email Row -->
          <div>
            <label for="email" class="block text-black/70 text-sm mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              aria-required="true"
              class="w-full px-4 py-3 bg-white border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-dark-green focus:border-transparent transition-all"
            />
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-black/70 text-sm mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              aria-required="true"
              placeholder="Type your message..."
              class="w-full px-4 py-3 bg-white border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-dark-green focus:border-transparent transition-all resize-none"
            ></textarea>
          </div>

          <!-- Privacy Policy Consent (GDPR Required) -->
          <div class="flex items-start gap-3">
            <input
              type="checkbox"
              id="privacy-consent"
              name="privacyConsent"
              required
              aria-required="true"
              class="mt-1 w-4 h-4 text-dark-green bg-white border-black/20 rounded focus:ring-2 focus:ring-dark-green cursor-pointer"
            />
            <label for="privacy-consent" class="text-sm text-black/70 leading-relaxed cursor-pointer">
              I consent to the processing of my personal data as described in the{' '}
              <a href="/privacy" class="text-dark-green hover:underline font-medium" target="_blank" rel="noopener noreferrer">
                Privacy Policy
              </a>. This information will only be used to respond to my inquiry. <span class="text-red-600" aria-label="Required field">*</span>
            </label>
          </div>

          <!-- Submit Button -->
          <div>
            <button
              type="submit"
              class="px-10 py-4 bg-black text-white rounded-full font-semibold hover:bg-dark-green transition-colors text-lg disabled:opacity-50 disabled:cursor-not-allowed"
              aria-label="Send message"
            >
              Send
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
