---
// Contact Section - Get in touch form
---

<section class="section bg-cream">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <!-- Left Column: Contact Info Card -->
      <div class="bg-white rounded-3xl p-10 lg:p-12 shadow-sm">
        <!-- Tag -->
        <div class="flex items-center gap-2 mb-6">
          <div class="w-8 h-1 bg-dark-green rounded-full"></div>
          <span class="text-dark-green font-semibold text-sm tracking-widest uppercase">Connect</span>
        </div>

        <!-- Heading -->
        <h2 class="text-4xl lg:text-5xl font-display font-bold text-black mb-4">
          Get in touch
        </h2>

        <p class="text-black/70 text-lg mb-10">
          We're here to assist you with any inquiries.
        </p>

        <!-- Contact Details -->
        <div class="space-y-6">
          <!-- Email -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-cream flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-dark-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <a href="mailto:info@heartsbio.nl" class="text-black hover:text-green transition-colors text-lg">
              info@heartsbio.nl
            </a>
          </div>

          <!-- Phone -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-cream flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-dark-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <a href="tel:+31" class="text-black hover:text-green transition-colors text-lg">
              +31 (0) XXX XXX XXX
            </a>
          </div>
        </div>
      </div>

      <!-- Right Column: Contact Form -->
      <div>
        <form class="space-y-6" method="POST" action="/api/contact">
          <!-- Name Row -->
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="first-name" class="block text-black/70 text-sm mb-2">First name</label>
              <input
                type="text"
                id="first-name"
                name="firstName"
                required
                class="w-full px-4 py-3 bg-white border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-dark-green focus:border-transparent transition-all"
              />
            </div>
            <div>
              <label for="last-name" class="block text-black/70 text-sm mb-2">Last name</label>
              <input
                type="text"
                id="last-name"
                name="lastName"
                required
                class="w-full px-4 py-3 bg-white border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-dark-green focus:border-transparent transition-all"
              />
            </div>
          </div>

          <!-- Email & Phone Row -->
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block text-black/70 text-sm mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-white border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-dark-green focus:border-transparent transition-all"
              />
            </div>
            <div>
              <label for="phone" class="block text-black/70 text-sm mb-2">Phone number</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 bg-white border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-dark-green focus:border-transparent transition-all"
              />
            </div>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-black/70 text-sm mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              rows="6"
              required
              placeholder="Type your message..."
              class="w-full px-4 py-3 bg-white border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-dark-green focus:border-transparent transition-all resize-none"
            ></textarea>
          </div>

          <!-- Submit Button -->
          <div>
            <button
              type="submit"
              class="px-10 py-4 bg-black text-white rounded-full font-semibold hover:bg-dark-green transition-colors text-lg"
            >
              Send
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
