---

<BaseLayout title="Our Products - HeartsBio" description="Explore HeartsBio's portfolio of advanced biological solutions for modern agriculture">
  <div class="min-h-screen bg-cream">
    <!-- Hero Section -->
    <section class="bg-dark-green text-white py-20 md:py-28">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-block mb-6 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full">
            <span class="text-white font-semibold text-sm tracking-wide">OUR PRODUCTS</span>
          </div>
          <h1 class="text-4xl md:text-6xl font-display font-bold mb-6">
            Smart Biological Solutions for Modern Farming
          </h1>
          <p class="text-xl md:text-2xl text-white/90">
            Proven products that unlock soil potential, enhance nutrient efficiency, and build sustainable agricultural systems.
          </p>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="py-16 md:py-20">
      <div class="container-custom max-w-6xl">
        <div class="space-y-20">
          {products.map((product, index) => (
            <article id={product.id} class="bg-white rounded-3xl overflow-hidden shadow-lg">
              <!-- Product Layout -->
              <div class={`grid lg:grid-cols-2 gap-8 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
                <!-- Image Side -->
                <div class={`relative ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
                  <div class="relative aspect-square lg:aspect-auto lg:h-full overflow-hidden">
                    <img
                      src={product.image}
                      alt={product.name}
                      class="w-full h-full object-cover"
                      loading="lazy"
                      decoding="async"
                    />
                    <div class="absolute inset-0 bg-gradient-to-br from-dark-green/40 via-transparent to-transparent"></div>

                    <!-- Product Badge -->
                    <div class="absolute top-6 left-6">
                      <span class="inline-block px-4 py-2 bg-white/95 backdrop-blur-sm rounded-full text-dark-green font-bold shadow-lg">
                        {product.name}
                      </span>
                    </div>

                    {product.certification && (
                      <div class="absolute bottom-6 left-6">
                        <span class="inline-block px-4 py-2 bg-green/90 backdrop-blur-sm text-white text-sm font-semibold rounded-full">
                          ✓ {product.certification}
                        </span>
                      </div>
                    )}
                  </div>
                </div>

                <!-- Content Side -->
                <div class={`p-8 md:p-12 ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
                  <!-- Category Badge -->
                  <div class="inline-block mb-4 px-3 py-1 bg-dark-green/10 rounded-full">
                    <span class="text-dark-green font-semibold text-xs tracking-wide uppercase">
                      {product.category}
                    </span>
                  </div>

                  <!-- Product Title -->
                  <h2 class="text-3xl md:text-4xl font-display font-bold text-black mb-4">
                    {product.title}
                  </h2>

                  <!-- Tagline -->
                  <p class="text-lg text-dark-green font-semibold italic mb-6">
                    {product.tagline}
                  </p>

                  <!-- Description -->
                  <p class="text-black/70 text-lg mb-6 leading-relaxed">
                    {product.fullDescription}
                  </p>

                  <!-- Key Benefits -->
                  <div class="mb-8">
                    <h3 class="text-xl font-display font-bold text-black mb-4">Key Benefits</h3>
                    <ul class="space-y-3">
                      {product.benefits.map((benefit) => (
                        <li class="flex items-start gap-3">
                          <svg class="w-5 h-5 text-dark-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                          </svg>
                          <span class="text-black/80">{benefit}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  <!-- Features -->
                  <div class="bg-cream/50 rounded-xl p-6">
                    <h3 class="text-lg font-display font-bold text-black mb-3">Product Features</h3>
                    <ul class="space-y-2">
                      {product.features.map((feature) => (
                        <li class="flex items-start gap-2">
                          <span class="text-dark-green mt-1">●</span>
                          <span class="text-black/70 text-sm">{feature}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 md:py-20 bg-white">
      <div class="container-custom max-w-4xl text-center">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-black mb-6">
          Ready to Transform Your Agricultural Practices?
        </h2>
        <p class="text-xl text-black/70 mb-8">
          Contact us to learn more about how our products can benefit your operations.
        </p>
        <a
          href="/#contact"
          class="inline-flex items-center gap-2 px-8 py-4 bg-dark-green text-white font-semibold rounded-full hover:bg-green transition-colors shadow-lg hover:shadow-xl"
        >
          Get in Touch
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </section>

    <!-- Back to Home -->
    <section class="py-12 bg-cream">
      <div class="container-custom text-center">
        <a href="/" class="inline-flex items-center gap-2 text-dark-green hover:text-green transition-colors font-semibold">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Home
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
